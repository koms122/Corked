@model IEnumerable<WineProducts>

@section Styles{
    <link href="~/css/wine.css" rel="stylesheet" />
}

<form>
    <div class="form-row">
        <div class="form-group col-5">
            <label for="category">Category:</label>
            <select name="category" class="form-control">
                <option value="">All Products</option>
                <option value="redWine">RED WINE</option>
                <option value="whiteWine">WHITE WINE</option>
                <option value="rose">ROSE</option>
                <option value="champagne">CHAMPAGNE</option>
                <option value="cabernetSauvignon">CABERNET SAUVIGNON</option>
                <option value="Chardonnay">CHARDONNAY</option>
            </select>
        </div>
        <div class="form-group col-5">
            <label for="sort">Sort By</label>
            <select name="sort" class="form-control">
                <option value="price">Price (High to Low)</option>
                <option value="name">Name</option>
            </select>
        </div>
        <div class="form-group col-2">
            <label>&nbsp;</label>
            <button class="btn btn-default" style="display:block">Sort & Filter</button>
        </div>
    </div>
</form>


<div class="card-deck">
    @foreach (var product in Model)
    {
        <div class="card bg-light mb-3" style="width: 18rem;">
            <img class="card-img-top" src="@product.ImagePath" alt="@product.Name" style="width:300px; height:400px">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description</p>
                <p class="card-text">@(product.Price.HasValue ? product.Price.Value.ToString("c") : "No Price")</p>
                <a asp-controller="WineList" asp-action="Details" asp-route-id="@product.ID" class="btn btn-secondary">View Details</a>
            </div>
        </div>
    }
</div>
