@model IEnumerable<WineProducts>

@section Styles{
    <link href="~/css/wine.css" rel="stylesheet" />
}

<form>
    <div class="form-row">
        <div class="form-group col-5">
            <label for="category">Category:</label>
            <select name="category" class="form-control">
                <option value="">All Products</option>
                <option value="redWine">Red Wine</option>
                <option value="whiteWine">White Wine</option>
                <option value="rose">Rose</option>
                <option value="champagne">Champagne</option>
                <option value="cabernetSauvignon">Cabernet Sauvignon</option>
                <option value="Chardonnay">Chardonnay</option>
            </select>
        </div>
        <div class="form-group col-5">
            <label for="sort">Sort By</label>
            <select name="sort" class="form-control">
                <option value="price">Price (High to Low)</option>
                <option value="name">Name</option>
            </select>
        </div>
        <div class="form-group col-2">
            <label>&nbsp;</label>
            <button class="btn btn-default" style="display:block">Sort & Filter</button>
        </div>
    </div>
</form>


<div class="row">
    @foreach (var product in Model)
    {
        <h1>@product.Name</h1>
        <p>@product.Description</p>
        <img src="@product.ImagePath" alt=" =@product.Name" />
        <p>@(product.Price.HasValue ? product.Price.Value.ToString("c") : "No Price")</p>
        <a asp-controller="WineList" asp-action="Details" asp-route-id="@product.ID" class="btn btn-secondary">View Details</a>
    }
</div>
