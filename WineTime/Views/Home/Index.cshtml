@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link href="~/css/home.css" rel="stylesheet" />
}

<!-- Header -->
<header class="w3-display-container w3-content w3-wide" style="max-width:1600px;min-width:500px" id="home">
    <img class="w3-image" src="~/images/mainpic.jpg" alt="mainpic" width="1600" height="500">
    <div class="w3-display-bottomleft w3-padding-large w3-opacity">
        <h1 class="w3-xxlarge" style="color: darksalmon; font-size: 45px; letter-spacing: 5px;">&#161;Corked</h1>
    </div>
</header>

<!-- Page content -->
<div class="w3-content" style="max-width:1100px">

    <!-- About Section -->
    <!-- how it works -->
    <div class="w3-row w3-padding-64" id="about">
        <div class="w3-col m6 w3-padding-large w3-hide-small">
            <img src="~/images/homebottles.svg" class="w3-round w3-image w3-opacity-min" alt="homeBottles" width="350" height="550">
        </div>

        <div class="w3-col m6 w3-padding-large">
            <h1 class="w3-center" @*style="letter-spacing: 2px;*@">How does it work?</h1><br>
            <p style="font-family: Playfair Display; text-align: center; letter-spacing: 3px; font-size: 25px;">
                It's pretty simple, actually. Either order your favorite bottles of wine from Ros&eacute; to Cabernet OR
                subscribe to the <span class="w3-tag w3-light-grey"><a asp-controller="Subscription" asp-action="Index">Finer Things Club</a></span> to be surprised. Have you ever tried cake flavored wine?
            </p>
        </div>
    </div>

    <!-- delivery -->
    <div class="w3-row w3-padding-64" id="about">
        <div class="w3-col m6 w3-padding-large">
            <h1 class="w3-center" @*style="letter-spacing: 2px;*@">Want it right now?<br />We feel you</h1><br>
            <p style="font-family: Playfair Display; text-align: center; letter-spacing: 3px; font-size: 25px;">
                We know the excruciating pain of waiting days for delivery. Who thinks that far ahead? Order and get it within a two hour window. Because anything more than that is unacceptable.<br />
                <button class="w3-button w3-white w3-border w3-border-red w3-round-large" asp-controller="WineList" asp-action="Index" style="margin-top: 8px;">Take me to the wines</button>
            </p>
        </div>

        <div class="w3-col m6 w3-padding-large w3-hide-small">
            <img src="~/images/fast-delivery.svg" class="w3-round w3-image w3-opacity-min" alt="fastDelivery" width="350" height="550">
        </div>
    </div>

    <!-- finer things club -->
    <div class="w3-row w3-padding-64" id="about">
        <div class="w3-col m6 w3-padding-large w3-hide-small">
            <img src="~/images/winebox.svg" class="w3-round w3-image w3-opacity-min" alt="homeBottles" width="350" height="550">
        </div>

        <div class="w3-col m6 w3-padding-large">
            <h1 class="w3-center" @*style="letter-spacing: 2px;*@">Finer Things Club? </h1><br>
            <p style="font-family: Playfair Display; text-align: center; letter-spacing: 3px; font-size: 25px;">
                Ever sat down for dinner and realized you forgot the most important thing - wine? It's the worst! Well make sure that never happens again.<br />
                <button class="w3-button w3-white w3-border w3-border-red w3-round-large" asp-controller="Subscription" asp-action="Index" style="margin-top: 8px;">Join Today!</button>
            </p>
        </div>
    </div>

    <hr>

    @*<!-- Menu Section -->
    <div class="w3-row w3-padding-64" id="menu">
