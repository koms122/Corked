@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link href="~/css/home.css" rel="stylesheet" />
    <link href="bootstrap.min.css" rel="stylesheet">

}

<!-- Carousel -->
<div class="container-fluid">
    <div data-ride="car" class="carousel slide" id="carousel">
        <ul class="carousel-indicators">
            <li data-slide-to="0" class="active" data-target="#carousel"></li>
            <li data-slide-to="1" data-target="#carousel"></li>
            <li data-slide-to="2" data-target="#carousel"></li>
        </ul>
        <div class="carousel-inner">
            <div class="active carousel-item">
                <img alt="Corked" src="~/images/HomePagePic.jpg" /><a asp-controller="WineList" asp-action="Index"></a>
            </div>
            <div class="carousel-item">
                <img alt="ShopNow" src="~/images/HomePagePic.jpg">
                <div class="carousel-caption">
                    <p><a class="btn btn-lg btn-primary" role="button" asp-controller="WineList" asp-action="Index">SHOP NOW!</a></p>
                </div>
            </div>
            <div class="carousel-item">
                <img alt="FinerThingsClub" src="~/images/HomePagePic.jpg">
                <div class="carousel-caption">
                    <!-- Change asp-controller once the controller is made -->
                    <p><a class="btn btn-lg btn-primary" role="button" asp-controller="WineList" asp-action="Index">Join the Finer Things Club Today!</a></p>
                </div>
            </div>
        </div>
        <a href="#carousel" class="carousel-control-prev" data-slide="prev">
            <
        </a>
        <a href="#carousel" class="carousel-control-next" data-slide="next">
            >
        </a>
    </div>
</div>