@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link href="~/css/home.css" rel="stylesheet" />
}


<div class="container-fluid">
    <div data-ride="car" class="carousel slide" id="carousel">
        <ul class="carousel-indicators">
            <li data-slide-to="0" class="active" data-target="#carousel"></li>
            <li data-slide-to="1" data-target="#carousel"></li>
            <li data-slide-to="2" data-target="#carousel"></li>
        </ul>
        <div class="carousel-inner">
            <div class="active carousel-item">
                <img alt="Corked" src="~/images/HomePagePic.jpg">
            </div>
            <div class="carousel-item">
                <img alt="ShopNow" src="~/images/HomePagePic.jpg">
                <div class="carousel-caption">
                    <h2>Shop Now</h2>
                </div>
            </div>
            <div class="carousel-item">
                <img alt="FinerThingsClub" src="~/images/HomePagePic.jpg">
                <div class="carousel-caption">
                    <h2>Join The Finer Things Club Today!</h2>
                </div>
            </div>
        </div>
        <a href="#carousel" class="carousel-control-prev" data-slide="prev">
            <
        </a>
        <a href="#carousel" class="carousel-control-next" data-slide="next">
            >
        </a>
    </div>
</div>